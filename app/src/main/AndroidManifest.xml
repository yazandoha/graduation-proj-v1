<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drowsinessdetectorapp">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_detector_logo1"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_detector_logo1_round"
        android:roundIcon="@mipmap/ic_detector_logo1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.RegesterActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".activity.StartingActivity" />
        <activity
            android:name=".activity.LaunchActivity"
            android:icon="@mipmap/ic_detector_logo1"
            android:logo="@mipmap/ic_detector_logo1_round"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/ic_detector_logo1_round"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="face" />

        <activity
            android:name=".activity.MainActivity"
            android:icon="@mipmap/ic_detector_logo1"
            android:logo="@mipmap/ic_detector_logo1_round"
            android:roundIcon="@mipmap/ic_detector_logo1_round"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>